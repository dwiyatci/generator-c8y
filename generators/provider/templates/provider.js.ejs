(function () {
  'use strict';

  angular
    .module('<%= moduleName %>')
    .provider('<%= providerName %>', <%= providerName %>Provider);

  /* @ngInject */
  function <%= providerName %>Provider() {
    const provider = this;
    let configurableProperty;

    _.assign(provider, {
      setConfigurableProperty,
      $get: <%= providerName %>Service
    });

    ////////////

    function setConfigurableProperty(value) {
      configurableProperty = value;
    }

    function <%= providerName %>Service() {
      const service = {
        method
      };

      return service;

      ////////////

      function method() {
        return `hello, ${configurableProperty}`;
      }
    }
  }
}());
