(() => {
  'use strict';

  angular.module('<%= moduleName %>').component('<%= widgetConfigComponentName %>', {
    templateUrl: ':::PLUGIN_PATH:::/widget-config.html',
    bindings: {
      config: '<'
    },
    controllerAs: 'vm',
    controller: Controller
  });

  function Controller(this: angular.IController) {
    'ngInject';

    const vm = this;
    const defaultConfig = {};

    _.assign(vm, {
      $onInit
    });

    ////////////

    function $onInit() {
      _.defaults(vm.config, defaultConfig);
    }
  }
})();
