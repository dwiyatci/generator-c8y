(function () {
  'use strict';

  angular
    .module('<%= moduleName %>')
    .component('<%= widgetConfigComponentName %>', {
      templateUrl: ':::PLUGIN_PATH:::/widget-config.html',
      bindings: {
        config: '<'
      },
      controllerAs: 'vm',
      controller: Controller
    });

  /* @ngInject */
  function Controller() {
    const vm = this;
    const defaultConfig = {};

    _.assign(vm, {
      $onInit,
      $onChanges
    });

    ////////////

    function $onInit() {
      _.defaults(vm.config, defaultConfig);
    }

    function $onChanges({ config }) {
      if (config && vm.config) {
        const { device } = vm.config;

        console.log(device);
      }
    }
  }
}());
