<ng-form
  class="<%= widgetConfigCssClassName %>"
  name="<%= widgetConfigFormName %>"
>
  <div
    class="form-group"
    ng-class="{'has-error': <%= widgetConfigFormName %>.aWidgetConfigItem.$invalid}"
  >
    <label translate>A widget config item</label>
    <input
      class="form-control"
      name="aWidgetConfigItem"
      ng-model="vm.config.aWidgetConfigItem"
    >
  </div>
</ng-form>
