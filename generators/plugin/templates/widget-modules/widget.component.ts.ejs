export const <%= widgetComponentName %> = {
  templateUrl: ':::PLUGIN_PATH:::/widget.html',
  bindings: {
    config: '<'
  },
  controllerAs: 'vm',
  controller: Controller
};

/* @ngInject */
function Controller(
  this: angular.IController,
  <%= widgetDataServiceName %>: any
) {
  const vm = this;

  _.assign(vm, {
    $onChanges
  });

  ////////////

  function $onChanges(changes: angular.IOnChangesObject) {
    if (changes.config) {
      onConfigChange(vm.config);
    }
  }

  function onConfigChange(config: any) {
    const deviceId = _.get(config, 'device.id');

    if (deviceId) {
      <%= widgetDataServiceName %>.getData({ source: deviceId })
        .then((data: any) => { vm.data = data; });
    }
  }
}
