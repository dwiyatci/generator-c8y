(function () {
  'use strict';

  angular
    .module('<%= moduleName %>')
    .component('<%= widgetComponentName %>', {
      templateUrl: ':::PLUGIN_PATH:::/widget.html',
      bindings: {
        device: '<'
      },
      controller: Controller,
      controllerAs: 'vm'
    });

  /* @ngInject */
  function Controller(
    <%= widgetDataServiceName %>
  ) {
    const vm = this;

    _.assign(vm, {
      $onInit,
      $onChanges
    });

    ////////////

    function $onInit() {

    }

    function $onChanges({ device }) {
      if (device) {
        onDeviceChange();
      }
    }

    async function onDeviceChange() {
      const { device } = vm;

      if (device) {
        const data = await <%= widgetDataServiceName %>.getDataForDeviceId(device.id);

        vm.data = data;

        onDataChange();
      }
    }

    function onDataChange() {

    }
  }
}());
