describe('<%= moduleName %>: <%= filterName %> filter', () => {
  'use strict';

  let <%= filterName %>;

  beforeEach(() => {
    common.globalBeforeWithUI();
    module('<%= moduleName %>');

    inject(
      (
        $filter
      ) => {
        <%= filterName %> = $filter('<%= filterName %>');
      }
    );
  });

  describe('testing filter', () => {
    it('should correctly format the output', () => {
      // given
      const input = 'hello, world';

      // when
      const output = <%= filterName %>(input);

      // then
      expect(output)
        .toEqual('hello, world');
    });
  });
});
