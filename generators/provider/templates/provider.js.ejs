(() => {
  'use strict';

  angular.module('<%= moduleName %>').provider('<%= providerName %>', <%= providerName %>Provider);

  /* @ngInject */
  function <%= providerName %>Provider() {
    const provider = this;
    let configurableProperty;

    _.assign(provider, {
      setConfigurableProperty,
      $get
    });

    ////////////

    function setConfigurableProperty(value) {
      configurableProperty = value;
    }

    function $get() {
      const service = {
        method
      };

      return service;

      ////////////

      function method() {
        return `hello, ${configurableProperty}`;
      }
    }
  }
})();
