(function () {
  'use strict';

  angular
    .module('<%= moduleName %>')
    .decorator('<%= recipeName %>Directive', directiveDecorator);

  /* @ngInject */
  function directiveDecorator(
    $delegate,
    $compile,
    $parse
  ) {
    var ddo = $delegate[0];
    var originalLinkFn = ddo.link;

    ddo.compile = compile;
    delete ddo.link;

    return $delegate;

    ////////////

    function compile() {
      return link;

      ////////////

      function link(scope, el, attrs, controller) {
        originalLinkFn && originalLinkFn.apply(this, arguments);
      }
    }
  }
}());
