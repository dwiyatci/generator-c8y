(function () {
  'use strict';

  angular
    .module('<%= moduleName %>')
    .component('<%= widgetComponentName %>', {
      templateUrl: ':::PLUGIN_PATH:::/widget.html',
      bindings: {
        device: '<'
      },
      controllerAs: 'vm',
      controller: Controller
    });

  /* @ngInject */
  function Controller(
    <%= widgetDataServiceName %>
  ) {
    const vm = this;

    _.assign(vm, { $onChanges });

    ////////////

    function $onChanges({ device }) {
      if (device) {
        onDeviceChange();
      }
    }

    function onDeviceChange() {
      const deviceId = _.get(vm, 'device.id');

      if (deviceId) {
        <%= widgetDataServiceName %>.getDataForDeviceId(deviceId)
          .then(data => (vm.data = data));
      }
    }
  }
}());
