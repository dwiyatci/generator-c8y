describe('<%= moduleName %>: <%= filterName %> filter', function () {
  var <%= filterName %>;

  beforeEach(function () {
    common.globalBeforeWithUI();
    module('<%= moduleName %>');

    inject(function ($filter) {
      <%= filterName %> = $filter('<%= filterName %>');
    });
  });

  describe('testing filter', function () {
    it('should correctly format the output', function () {
      // given
      var input = 'hello, world';

      // when
      var output = <%= filterName %>(input);

      // then
      expect(output)
        .toEqual('hello, world');
    });
  });
});
